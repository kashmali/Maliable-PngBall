package Files.Current.physicsEngine;

import java.awt.geom.Point2D;
import java.util.ArrayList;
import java.awt.event.KeyEvent;
import java.awt.Shape;
import java.awt.geom.Ellipse2D;

//Warning: x and y and the coordinates of the top left corner
public class CircleSpawn extends Spawn
{
  private double radius;
  public CircleSpawn(int x, int y, double vx, double vy, int m)
  {
    super (x,y,vx,vy,m);
    this.radius = 15.0;
    this.shape = new Ellipse2D.Double(x, y,radius * 2, radius * 2);
  }
  
  public void updatePos(double newX, double newY)
  {
    this.x = newX;
    this.y = newY;
    shape = new Ellipse2D.Double(newX, newY,radius * 2, radius * 2);
  }
  
  public int getLength()
  {
    return (int) (this.radius * 2);
  }

  public int getHeight()
  {
    return (int) (this.radius * 2);
  }
  
  public double getRadius()
  {
    return this.radius;
  }
  
  public void setRadius (double newRadius)
  {
   this.radius = newRadius; 
  }
}