public class SplashFrame ()
{
  public SplashFrame ()
  {
    super ();
    setUndecorated (true);
    setExtendedState(Frame.MAXIMIZED_BOTH);
    getContentPane().add (new SplashPanel ());
    setVisible (true); 
  }
  
  public void show ()
  {
    try
    {
      Thread.sleep (2000);
    }
    catch (InterruptedException e)
    {
      
    }
    this.dispose ();
  }
}